%form{ :class => 'edit-in-place' }
  %span{ 'ng-hide' => 'editing', 'ng-click' => 'edit()' } {{$parent[field]}}
  %input{ 'ng-show' => 'editing', 'ng-model' => 'value' }
  %input{ :type => 'submit', 'ng-show' => 'editing', 'ng-click' => 'save(value)', 'value' => 'save' }
  %input{ :type => 'button', 'ng-show' => 'editing', 'ng-click' => 'cancel()', 'value' => 'cancel' }
